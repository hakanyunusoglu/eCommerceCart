@model eCommerce.UI.Models.DTO.CartVM
@{
    ViewData["Title"] = "Sepetteki Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="h3 text-center">Sepetteki Ürünler</h1>
<hr />
@if (Model.CartItemList.Count() == 0)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning text-center">
                <h4>Sepetinizde ürün bulunmamaktadır!</h4>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="text-left">
                <h4>Sepet Detayı</h4>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Ürün</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItemList)
                    {
                        <tr>
                            <td>
                               <a href="/Home/Detail/@item.productID" class="text-decoration-none"> <img src="~/@item.ImageUrl" width="100" alt="" /></a>
                            </td>
                            <td> <a href="/Home/Detail/@item.productID" class="text-decoration-none text-dark">@item.Name</a></td>
                            <td><a href="/Home/Detail/@item.productID" class="text-decoration-none text-dark">@item.CategoryName</a></td>
                            <td>@String.Format(new System.Globalization.CultureInfo("tr-TR"), "{0:c2}",item.Price)</td>
                            <td>@item.Quantity</td>
                            <td><b>@String.Format(new System.Globalization.CultureInfo("tr-TR"), "{0:c2}", (item.Quantity*item.Price))</b></td>
                            <td>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                    <input type="hidden" name="productID" value="@item.productID" />
                                    <button class="btn btn-danger btn-sm" type="submit"><i class="fa fa-times fa-fw" /></button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="text-left">
                <h4>Sepet Özeti</h4>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Sepet Toplamı : </th>
                        <td>@String.Format(new System.Globalization.CultureInfo("tr-TR"), "{0:c2}", @Model.TotalPrice())</td>
                    </tr>
                    <tr>
                        <th>Kargo : </th>
                        <td>Ücretsiz Kargo</td>
                    </tr>
                    <tr>
                        <th>Sipariş Toplamı : </th>
                        <td>@String.Format(new System.Globalization.CultureInfo("tr-TR"), "{0:c2}", @Model.TotalPrice())</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/Home/Index" class="btn btn-primary"><i class="fa fa-arrow-circle-left fa-fw"></i>Devam Et</a>
                <a href="/Cart/CheckOut" class="btn btn-primary">Tamamla<i class="fa fa-arrow-circle-right fa-fw"></i></a>
            </div>
        </div>
    </div>
}

